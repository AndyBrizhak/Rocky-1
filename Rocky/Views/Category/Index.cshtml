@model IEnumerable<Rocky.Models.Category>;

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category list</h2>
        </div>

        <div class="col-6 text-right">
            <a class="btn-primary btn" asp-controller="Category" asp-action="Create">
                <i class="fa-solid fa-plus"></i> &nbsp; Create new Category
            </a> 
        </div>        
    </div>
    <br />

    @if(Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Category Name</th>
                    <th>Display Order</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var obj in Model)
                {
                    <tr>
                        <td width="50%">@obj.CategoryName</td>
                        <td width="30%">@obj.DisplayOrder</td>
                        <td>
                            <div role="group" class="w-75 btn-group">
                                <a class="btn-primary btn mx-2" asp-route-id="@obj.CategoryId" asp-controller="Category" asp-action="Edit">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>
                                <a class="btn-danger btn mx-2" asp-route-id="@obj.CategoryId" asp-controller="Category" asp-action="Delete">
                                    <i class="fa-solid fa-trash"></i>
                                </a> 
                            </div>
                        </td>  
                    </tr>                                     
                }
            </tbody>
            
        </table>
    }
    else
    {
        <p>No category exists</p>            
    } 
</div>



